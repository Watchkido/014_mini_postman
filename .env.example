# Environment Variables für Mini Postman
# WICHTIG: Diese Datei NIEMALS in Git committen!

# =============================================================================
# API KEYS & TOKENS
# =============================================================================

# LibreTranslate API (für Übersetzungen)
LIBRETRANSLATE_API_KEY=your_libretranslate_api_key_here
LIBRETRANSLATE_BASE_URL=http://192.168.178.185:5000

# OpenAI API (optional für AI-Features)
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Translation API (optional)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Azure Cognitive Services (optional)  
AZURE_TRANSLATOR_KEY=your_azure_translator_key_here
AZURE_TRANSLATOR_REGION=your_azure_region_here

# =============================================================================
# DATABASE CREDENTIALS (falls benötigt)
# =============================================================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=mini_postman_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# =============================================================================
# EXTERNAL API ENDPOINTS
# =============================================================================

# Test APIs
JSONPLACEHOLDER_BASE_URL=https://jsonplaceholder.typicode.com
HTTPBIN_BASE_URL=https://httpbin.org

# Custom APIs (Beispiele)
YOUR_API_BASE_URL=https://api.yourservice.com
YOUR_API_KEY=your_api_key_here
YOUR_API_SECRET=your_api_secret_here

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret für Session-Management (falls implementiert)
JWT_SECRET_KEY=your_super_secret_jwt_key_here_min_32_chars

# Encryption Key für sensitive Daten
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# NOTIFICATION SETTINGS  
# =============================================================================

# E-Mail Benachrichtigungen
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password

# Slack Webhook (für Fehlermeldungen)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord Webhook (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode
DEBUG=true

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Health Check Intervall (in Sekunden)
HEALTH_CHECK_INTERVAL=300

# Performance Thresholds
PERFORMANCE_WARNING_MS=1000
PERFORMANCE_ERROR_MS=5000

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# GitHub API (für Repository-Integration)
GITHUB_TOKEN=your_github_personal_access_token

# Docker Registry (falls Container verwendet werden)
DOCKER_REGISTRY_USERNAME=your_docker_username
DOCKER_REGISTRY_PASSWORD=your_docker_password

# Monitoring Services
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_API_KEY=your_grafana_api_key

# =============================================================================
# CUSTOM CONFIGURATIONS
# =============================================================================

# Custom Header für alle Requests
CUSTOM_USER_AGENT=Mini-Postman/1.0.0
CUSTOM_API_HEADER=X-Mini-Postman-Client

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Entwickler-spezifische URLs (lokale Services)
LOCAL_DEV_API=http://localhost:3000
LOCAL_TRANSLATE_SERVICE=http://localhost:5000

# Test Datenbank
TEST_DB_URL=postgresql://test_user:test_pass@localhost:5433/test_db

# =============================================================================
# BEISPIEL WERTE - BITTE ANPASSEN!
# =============================================================================
# Kopieren Sie diese Datei zu .env und passen Sie die Werte an:
# cp .env.example .env